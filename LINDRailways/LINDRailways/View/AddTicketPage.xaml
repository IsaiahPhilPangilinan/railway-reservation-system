<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LINDRailways.View.AddTicketPage"
             xmlns:viewmodel="clr-namespace:LINDRailways.ViewModel"
             x:DataType="viewmodel:AddTicketViewModel"
             Title="{Binding TrainSchedule.TrainName.Name}">
    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Grid.Row="0">
                <Grid ColumnDefinitions="*,Auto,*"
                      RowDefinitions="160,Auto">
                    <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource LatteCrust}, Dark={StaticResource MacchiatoCrust}}"
                             Grid.ColumnSpan="3"
                             HeightRequest="160"
                             HorizontalOptions="FillAndExpand"/>
                    <Border Grid.RowSpan="2"
                            Grid.Column="1"
                            HeightRequest="200"
                            WidthRequest="200"
                            Stroke="{AppThemeBinding Light={StaticResource LatteLavender}, Dark={StaticResource MacchiatoLavender}}"
                            StrokeThickness="15"
                            StrokeShape="RoundRectangle 80,80,80,80"
                            Margin="0,60,0,0">
                        
                        <Image Aspect="AspectFit"
                               WidthRequest="200"
                               HeightRequest="200"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Source="{Binding TrainSchedule.TrainName.ImageSource}"/>
                    </Border>
                </Grid>
                <Label Text="{Binding TrainSchedule.TrainName.Name}"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" 
                       FontSize="30"/>
                <Label Text="{Binding TrainSchedule.TrainName.Description}"
                       VerticalOptions="Center" 
                       HorizontalOptions="Start" />
                <Label Text="{Binding TrainSchedule.Destination.Name}"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" />
                <Label Text="{Binding TrainSchedule.DepartureTime}"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.Row="1"
              BackgroundColor="{AppThemeBinding Light={StaticResource LatteCrust}, Dark={StaticResource MacchiatoCrust}}"
              ColumnDefinitions="*,*"
              Padding="10">
            <Button Grid.Column="0" 
                    Text="Register"
                    Margin="0,0,5,0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LatteBlue}, Dark={StaticResource MacchiatoBlue}}"
                    TextColor="{AppThemeBinding Light={StaticResource MacchiatoText}, Dark={StaticResource LatteText}}"
                    />
            <Button Grid.Column="1" 
                    Margin="5,0,0,0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LatteGreen}, Dark={StaticResource MacchiatoGreen}}"
                    TextColor="{AppThemeBinding Light={StaticResource MacchiatoText}, Dark={StaticResource LatteText}}"
                    Text="Book"/>
        </Grid>
    </Grid>
</ContentPage>