<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LINDRailways.View.TicketDetailsPage"
             xmlns:viewmodel="clr-namespace:LINDRailways.ViewModel"
             x:DataType="viewmodel:TicketDetailsViewModel"
             Title="{Binding Ticket.TrainName}">
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout>
                <Label Text="{Binding Ticket.Id}"/>
                <Label Text="{Binding Ticket.DepartureTime}"/>
                <Label Text="{Binding Ticket.DepartureDate}"/>
                <Label Text="{Binding Ticket.IsMale}"/>
                <Label Text="{Binding Ticket.IsPaid}"/>
                <Label Text="{Binding Ticket.Origin}"/>
                <Label Text="{Binding Ticket.Destination}"/>
                <Label Text="{Binding Ticket.TrainName}"/>
            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.Row="1"
              BackgroundColor="{AppThemeBinding Light={StaticResource LatteCrust}, Dark={StaticResource MacchiatoCrust}}"
              ColumnDefinitions="*,*"
              Padding="10">
            <Button Grid.Column="0" 
                    Text="Cancel Ticket"
                    Margin="0,0,5,0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LatteRed}, Dark={StaticResource MacchiatoRed}}"
                    TextColor="{AppThemeBinding Light={StaticResource MacchiatoText}, Dark={StaticResource LatteText}}"
                    Command="{Binding CancelTicketCommand}"
                    />
            <Button Grid.Column="1" 
                    Margin="5,0,0,0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LatteGreen}, Dark={StaticResource MacchiatoGreen}}"
                    TextColor="{AppThemeBinding Light={StaticResource MacchiatoText}, Dark={StaticResource LatteText}}"
                    Command="{Binding PayTicketCommand}"
                    Text="Pay Ticket"/>
        </Grid>
    </Grid>
</ContentPage>