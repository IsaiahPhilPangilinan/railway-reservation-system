<Window x:Class="RailwayReservationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailwayReservationSystem"
        xmlns:viewModel="clr-namespace:RailwayReservationSystem.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Railway Reservation System" Height="600" Width="800"
        MinHeight="600"
        MinWidth="800"
        ResizeMode="CanResize"
        >
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border Background="#272537">
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Menu -->
                <StackPanel Grid.Column="0">

                </StackPanel>

                <ContentControl Grid.Column="1">
                    
                </ContentControl>
            </Grid>
        </Grid>
    </Border>
</Window>
